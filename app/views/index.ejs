<!DOCTYPE html>
<html lang="pt">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <title>Chat</title>
      <!-- incluindo css -->
      <link href="css/style.css" rel="stylesheet">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
      <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.2/bootbox.min.js" integrity="sha512-RdSPYh1WA6BF0RhpisYJVYkOyTzK4HwofJ3Q7ivt/jkpW6Vc8AurL1R+4AUcvn9IwEKAPm/fk7qFZW3OuiUDeg==" crossorigin="anonymous"></script>
		<script src="js/index.js"></script>
   </head>
   <body>
      <header>
         <div class="navbar navbar-dark bg-dark box-shadow">
            <div class="container d-flex justify-content-between">
               <a href="#" class="navbar-brand d-flex align-items-center">
               <strong>Chat - V1.0.0</strong>
               </a>
            </div>
            <div>
               <button type="button" class="btn btn-primary mb-2"  data-toggle="modal" onclick="help()" id="btnHelp">Help</button>
            </div>
         </div>
      </header>
      <main role="main">
         <div class="ex1 album py-5 bg-light" >
            <div class="container" style="height: 350px;">
               <div class="row">
                  <div class="col col-lg-2">
                     <!-- Empty column -->
                  </div>
                  <div id="messages-box" class="col-8"></div>
                  <div class="col col-lg-2">
                     <!-- Empty column -->
                  </div>
               </div>
            </div>
         </div>
  
         <section class="jumbotron text-center" style="width: auto; height: 20px; margin: 0 auto;">
            <div class="container" >
               <div class="form-inline" style="width: auto;" id="formReg">
                     <div class="form-group mb-2"style="margin-inline-start: 200px;">
                        <input type="text" class="form-control" id="inputUser" placeholder="Login" style="width: 200px; margin-right:20px;"> 
                        <a onclick="sendRegistrar()" href="#" id="btnUser" class="btn btn-primary">Log in</a>
                        
                     </div>
               </div>
               <div class="form-inline" style="width: 100%; margin: 0 auto;" id="formMessage">
                  <div class="form-group mb-2" style="margin-inline-start: 200px;">
                     <select id="select-receive" class="custom-select bg-secondary text-white" style="margin-right:10px;" >
                        <option value="All" selected>All</option>
                     </select>
                     <input  id="message-input" type="text" class="form-control"  placeholder="Enter your message" style="width: 500px; margin-right:20px;">
                     <a onclick="sendMessage()" href="#" class="btn btn-primary">submit</a>
                     <div class="form-check" style="margin-left:10px;">
                        <input type="checkbox" class="form-check-input" id="input-private">
                        <label class="form-check-label" for="exampleCheck1">Private</label>
                      </div>
                  </div>
               </div>
            </div>
         </section>
      </main>
    
   </body>
</html>